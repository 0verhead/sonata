  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sonata": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
